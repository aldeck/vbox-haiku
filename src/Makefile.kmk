SUB_DEPTH = ..
include $(KBUILD_PATH)/subheader.kmk

ifdef VBOX_SINGLE_MAKEFILE

if defined(VBOX_ONLY_ADDITIONS)
 include $(PATH_SUB_CURRENT)/VBox/Makefile.kmk

else if defined(VBOX_ONLY_TESTSUITE)
 include $(PATH_SUB_CURRENT)/libs/Makefile.kmk
 include $(PATH_SUB_CURRENT)/VBox/Makefile.kmk

else if defined(VBOX_ONLY_DOCS) || defined(VBOX_ONLY_SDK)
 include $(PATH_SUB_CURRENT)/bldprogs/Makefile.kmk
 include $(PATH_SUB_CURRENT)/VBox/Makefile.kmk
 include $(PATH_SUB_CURRENT)/libs/Makefile.kmk

else  # !VBOX_ONLY_ADDITIONS && !VBOX_ONLY_TESTSUITE && !VBOX_ONLY_DOCS && !VBOX_ONLY_SDK
 include $(PATH_SUB_CURRENT)/bldprogs/Makefile.kmk
 include $(PATH_SUB_CURRENT)/VBox/Makefile.kmk
 include $(PATH_SUB_CURRENT)/libs/Makefile.kmk
 if1of ($(KBUILD_TARGET_ARCH), x86 amd64)
  include $(PATH_SUB_CURRENT)/recompiler/Makefile.kmk
 endif
 ifneq ($(wildcard $(PATH_SUB_CURRENT)/apps),)
  include $(PATH_SUB_CURRENT)/apps/Makefile.kmk
 endif
 ifdef VBOX_WITH_TESTSUITE
  include $(PATH_SUB_CURRENT)/tests/Makefile.kmk
 endif
 ifdef VBOX_WITH_TESTCASES
  include $(PATH_SUB_CURRENT)/testcase/Makefile.kmk
 endif
endif # !VBOX_ONLY_ADDITIONS && !VBOX_ONLY_TESTSUITE && !VBOX_ONLY_DOCS && !VBOX_ONLY_SDK

else  # !VBOX_SINGLE_MAKEFILE
DEPTH  = ..
include $(KBUILD_PATH)/header.kmk

ifdef VBOX_ONLY_ADDITIONS
 SUBDIRS = VBox

else ifdef VBOX_ONLY_DOCS
 SUBDIRS = VBox/Runtime bldprogs libs VBox

else ifdef VBOX_ONLY_SDK
 SUBDIRS = bldprogs libs VBox

else  # !VBOX_ONLY_ADDITIONS
 # Build IPRT first because xpcom (IPC, nspr, python) depends on it.
 SUBDIRS = libs VBox/Runtime bldprogs VBox recompiler
 ifneq ($(wildcard apps),)
  SUBDIRS += apps
 endif
 ifdef VBOX_WITH_TESTSUITE
  SUBDIRS += tests
 endif
 ifdef VBOX_WITH_TESTCASES
  SUBDIRS += testcase
 endif
endif # !VBOX_ONLY_ADDITIONS

endif # !VBOX_SINGLE_MAKEFILE

include $(KBUILD_PATH)/subfooter.kmk

