# ACPI DSL generation
$(PATH_TARGET)/vboxaml.hex: PC/vbox.dsl
	$(call MSG_L1,iasl $<,=> $@)
	$(QUIET)$(VBOX_IASLCMD) -tc -vs -p $@ $<

