#
# VBoxDDU (shared object)
#
VBoxDDU_TEMPLATE         = VBOXR3
VBoxDDU_DEFS             = IN_VBOXDDU
ifdef VBOX_WITH_USB
 VBoxDDU_DEFS.win        = VBOX_WITH_USB
