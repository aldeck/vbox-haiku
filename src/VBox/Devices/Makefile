#
# VBoxDDGC (sysmod)
#
VBoxDDGC_TEMPLATE       = VBOXGC
VBoxDDGC_DEFS           =
VBoxDDGC_SYSSUFF        = .gc
VBoxDDGC_INCS           = \
	$(PATH_CURRENT)
VBoxDDGC_SOURCES        = \
	Bus/DevPCI.cpp \
	Graphics/DevVGA.cpp \
	Input/DevPS2.cpp \
	PC/DevACPI.cpp \
	PC/DevPit-i8254.cpp \
	PC/DevPIC.cpp \
	PC/DevRTC.cpp \
	Storage/DevATA.cpp \
	Network/DevPCNet.cpp \
	Serial/DevSerial.cpp

