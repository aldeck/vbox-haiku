ifdef VBOX_SINGLE_MAKEFILE
SUB_DEPTH = ../../../../..
else
SUB_DEPTH = ../..
DEPTH    ?= ../../../../..
endif
include	$(KBUILD_PATH)/subheader.kmk

#
# VBoxControl
#
PROGRAMS += VBoxControl
VBoxControl_TEMPLATE = VBOXGUESTR3EXE
ifeq ($(KBUILD_TARGET),win)
 ifdef VBOX_SIGN_ADDITIONS # (See the main Windows Additions makefile.)
  VBoxControl_NOINST  = true
 endif
endif
VBoxControl_DEFS     += \
	$(if $(VBOX_WITH_GUEST_PROPS),VBOX_WITH_GUEST_PROPS VBOX_WITH_HGCM,)
VBoxControl_SOURCES = \
	VBoxControl.cpp \
	VBoxControlSVN.cpp
VBoxControl_SOURCES.win = \
	VBoxControl.rc
VBoxControl_LIBS = \
	$(VBOX_LIB_IPRT_GUEST_R3) \
	$(VBOX_LIB_VBGL_R3) \
	$(VBOX_LIB_IPRT_GUEST_R3)

# VBoxControlSVN.cpp uses VBOX_SVN_REV.
VBoxControlSVN.cpp_DEFS = VBOX_SVN_REV=$(VBOX_SVN_REV)
VBoxControlSVN.cpp_DEPS = $(VBOX_SVN_REV_KMK)

include	$(KBUILD_PATH)/subfooter.kmk

