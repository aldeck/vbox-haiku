SUB_DEPTH = ../../../../..
include	$(KBUILD_PATH)/subheader.kmk

PROGRAMS += VBoxTray
VBoxTray_TEMPLATE = VBOXGUESTR3EXE
ifdef VBOX_SIGN_ADDITIONS # (See the parent makefile.)
 VBoxTray_NOINST  = true
endif
VBoxTray_DEFS     = VBOX_WITH_HGCM LOG_TO_BACKDOOR
#temporary define
VBoxTray_DEFS    += MMSEAMLESS
VBoxTray_INCS     = ../include
VBoxTray_SOURCES  = \
	VBoxTray.cpp \
	VBoxSeamless.cpp \
	VBoxClipboard.cpp \
	VBoxDisplay.cpp \
	VBoxVRDP.cpp \
	VBoxRestore.cpp \
	helpers.cpp \
	VBoxTray.rc
ifdef VBOX_WITH_GUEST_PROPS
 VBoxTray_DEFS     +=  _WIN32_IE=0x500 VBOX_WITH_GUEST_PROPS
 VBoxTray_SOURCES  += \
	VBoxHostVersion.cpp
endif

VBoxTray_LIBS     = \
	$(VBOX_LIB_IPRT_GUEST_R3) \
	$(VBOX_LIB_VBGL_R3)

ifdef VBOXWDDM
 VBoxTray_DEFS   += VBOXWDDM
 VBoxTray_DEFS   += LOG_ENABLED
 # we need only includes for PFND3DKMT stuff as all we link dynamicaly to it
 VBoxTray_INCS   += $(PATH_SDK_WINDDK_INC_API) $(PATH_SDK_WINDDK_INC_DDK)
endif
# VBoxTray.cpp uses VBOX_SVN_REV.
VBoxTray.cpp_DEFS += VBOX_SVN_REV=$(VBOX_SVN_REV)
VBoxTray.cpp_DEPS = $(VBOX_SVN_REV_KMK)

# The icon location is configurable.
VBoxTray.rc_INCS = $(PATH_VBoxTray)
VBoxTray.rc_DEPS = $(PATH_VBoxTray)/VBoxTray-icon.rc
VBoxTray.rc_CLEAN = $(PATH_VBoxTray)/VBoxTray-icon.rc

# Icon include file.
$$(PATH_VBoxTray)/VBoxTray-icon.rc: $(VBOX_WINDOWS_ADDITIONS_ICON_FILE) $$(VBoxTray_PATH)/Makefile.kmk | $$(dir $$@)
	$(RM) -f $@
	$(APPEND) $@ 'IDI_VIRTUALBOX ICON DISCARDABLE "$(subst /,\\,$(VBOX_WINDOWS_ADDITIONS_ICON_FILE))"'

include	$(KBUILD_PATH)/subfooter.kmk

