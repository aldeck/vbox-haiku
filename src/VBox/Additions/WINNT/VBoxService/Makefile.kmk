DEPTH ?= ../../../../..
SUB_DEPTH = ../..
include	$(PATH_KBUILD)/subheader.kmk

PROGRAMS += VBoxService
VBoxService_TEMPLATE = VBOXW32GUESTR3
ifdef VBOX_SIGN_ADDITIONS
 VBoxService_NOINST  = true
endif
VBoxService_DEFS     = VBOX_HGCM LOG_TO_BACKDOOR
VBoxService_INCS     = ../include
VBoxService_SOURCES  = \
	VBoxService.cpp \
	VBoxSeamless.cpp \
	VBoxClipboard.cpp \
	VBoxDisplay.cpp \
	VBoxVRDP.cpp \
        VBoxRestore.cpp \
        VBoxStatistics.cpp \
        VBoxMemBalloon.cpp \
	helpers.cpp \
	VBoxService.rc
VBoxService_LIBS     = \
	$(PATH_LIB)/additions/RuntimeW32GuestR3.lib

# VBoxService.cpp uses VBOX_SVN_REV.
VBoxService.cpp_DEFS += VBOX_SVN_REV=$(VBOX_SVN_REV)
VBoxService.cpp_DEPS = $(VBOX_SVN_REV_KMK)

include	$(PATH_KBUILD)/subfooter.kmk

