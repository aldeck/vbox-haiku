ifdef VBOX_KBUILD_HACKING
SUB_DEPTH = ../../../../..
else
DEPTH    ?= ../../../../..
SUB_DEPTH = ../..
endif
include	$(KBUILD_PATH)/subheader.kmk

PROGRAMS += VBoxService
VBoxService_TEMPLATE = VBOXGUESTR3EXE
VBoxService_DEFS     = LOG_TO_BACKDOOR _WIN32_WINNT=0x0501 _UNICODE UNICODE
ifdef VBOX_WITH_GUEST_PROPS
 VBoxService_DEFS += VBOX_WITH_HGCM VBOX_WITH_GUEST_PROPS
endif
VBoxService_INCS     = ../include
VBoxService_SOURCES  = \
	VBoxService.cpp \
	VBoxUtils.cpp \
	VBoxService.rc

ifdef VBOX_WITH_GUEST_PROPS
 VBoxService_SOURCES += \
	VBoxVMInfo.cpp \
	VBoxVMInfoAdditions.cpp \
	VBoxVMInfoUser.cpp \
	VBoxVMInfoNet.cpp \
	VBoxVMInfoOS.cpp
endif

VBoxService_LIBS     = \
	$(VBOX_LIB_IPRT_GUEST_R3) \
	$(VBOX_LIB_VBGL_R3) \
	$(VBOX_LIB_IPRT_GUEST_R3)

ifdef VBOX_WITH_GUEST_PROPS
 VBoxService_LIBS   += \
	Secur32.lib \
	WtsApi32.lib \
	Psapi.lib
endif

# VBoxService.cpp uses VBOX_SVN_REV.
VBoxService.cpp_DEFS += VBOX_SVN_REV=$(VBOX_SVN_REV)
VBoxService.cpp_DEPS = $(VBOX_SVN_REV_KMK)
VBoxService.rc_INCS = $(PATH_VBoxService)
VBoxService.rc_DEPS = $(PATH_VBoxService)/VBoxService-icon.rc
VBoxService.rc_CLEAN = $(PATH_VBoxService)/VBoxService-icon.rc

include	$(KBUILD_PATH)/subfooter.kmk

# Icon include file.
$(PATH_VBoxService)/VBoxService-icon.rc: $(VBOX_WINDOWS_ICON_FILE) $(VBoxService_PATH)/Makefile.kmk | $$(call DIRDEP,$$(@D))
	$(RM) -f $@
	$(APPEND) $@ 'IDI_VIRTUALBOX ICON DISCARDABLE "$(subst /,\\,$(VBOX_WINDOWS_ICON_FILE))"'
