include $(KBUILD_PATH)/subheader.kmk

#
# Targets.
#
ifdef VBOX_WITH_HARDENING
 PROGRAMS += VBoxNetDHCP
 DLLS += VBoxNetDHCP
else
 PROGRAMS += VBoxNetDHCP
endif


#
# Hardened VBoxNetDHCP.
#
VBoxNetDHCP_TEMPLATE = VBOXR3HARDENEDEXE
VBoxNetDHCP_SOURCES = VBoxNetDHCP.cpp
VBoxNetDHCP_NAME = VBoxNetDHCP


#
# VBoxNetDHCP
#
VBoxNetDHCP_TEMPLATE =
VBoxNetDHCP_TEMPLATE := VBOXR3$(if-expr defined(VBOX_WITH_HARDENING),,EXE)
VBoxNetDHCP_DEFS = VBOX_SVN_REV=$(VBOX_SVN_REV)
VBoxNetDHCP_INCS = \
	../UDPLib
VBoxNetDHCP_SOURCES = \
	VBoxNetDHCP.cpp \
	../UDPLib/VBoxNetUDP.cpp
VBoxNetDHCP_LIBS = \
	$(LIB_RUNTIME)


include $(KBUILD_PATH)/subfooter.kmk



