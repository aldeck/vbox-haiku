ifdef VBOX_KBUILD_HACKING
SUB_DEPTH = ../../../..
else
DEPTH    ?= ../../../..
SUB_DEPTH = ..
endif
include $(KBUILD_PATH)/subheader.kmk

PROGRAMS += VBoxManage
VBoxManage_TEMPLATE    = VBOXMAINCLIENTEXE
VBoxManage_DEFS       += $(if $(VBOX_WITH_VRDP),VBOX_VRDP,) \
                         $(if $(VBOX_WITH_ALSA),VBOX_WITH_ALSA,) \
                         $(if $(VBOX_WITH_PULSE),VBOX_WITH_PULSE,) \
                         $(if $(VBOX_WITH_E1000),VBOX_WITH_E1000,) \
                         $(if $(VBOX_WITH_AHCI),VBOX_WITH_AHCI,) \
                         $(if $(VBOX_WITH_GUEST_PROPS),VBOX_WITH_GUEST_PROPS,)
VBoxManage_DEFS.win    = _WIN32_WINNT=0x0500
VBoxManage_SOURCES     = \
	VBoxManage.cpp \
	VBoxInternalManage.cpp \
	$(if $(VBOX_WITH_GUEST_PROPS),VBoxManageGuestProps.cpp) \
	VBoxManageSVN.cpp
VBoxManage_LIBS       += $(LIB_DDU)

# VBoxManageSVN.cpp uses VBOX_SVN_REV.
VBoxManageSVN.cpp_DEFS = VBOX_SVN_REV=$(VBOX_SVN_REV)
VBoxManageSVN.cpp_DEPS = $(VBOX_SVN_REV_KMK)

include $(KBUILD_PATH)/subfooter.kmk

