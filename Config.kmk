#
# Subversion tree revision.
#
# The VBOX_SVN_REV contains our best guess. Use svn info on the
# root of the treeto determin this it if .svn/entries is found,
# otherwise fall back on the Config.kmk revision.
#
SVN                    ?= svn$(HOSTSUFF_EXE)
VBOX_SVN_REV_KMK        = $(PATH_OUT)/revision.kmk
ifndef VBOX_SVN_REV
 VBOX_SVN_REV_FALLBACK := $(patsubst %:,,  $Rev$  )
 VBOX_SVN_DEP          := $(wildcard $(PATH_ROOT)/.svn/entries)
 ifneq ($(USERNAME),bird) # Wastes nearly half a second on windows, very annoying. TODO: $(which ).
  ifneq ($(shell $(SVN) --version > /dev/null 2>&1 || echo 'svn not installed'),)
   VBOX_SVN_DEP         :=
  endif
 endif

# Rule for generating a timestamp and updating the real thing on change.
 ifneq ($(VBOX_SVN_DEP),)
# fixed in svn - $(VBOX_SVN_REV_KMK).ts +| $(VBOX_SVN_REV_KMK): $(VBOX_SVN_DEP)
$(VBOX_SVN_REV_KMK).ts: $(VBOX_SVN_DEP)
 else
# fixed in svn - $(VBOX_SVN_REV_KMK).ts +| $(VBOX_SVN_REV_KMK): $(PATH_ROOT)/Config.kmk
$(VBOX_SVN_REV_KMK).ts: $(PATH_ROOT)/Config.kmk
 endif
	$(call MSG_GENERATE,,$(VBOX_SVN_REV_KMK))
	$(QUIET)$(RM) -f $@
	$(QUIET)$(MKDIR) -p $(@D)
 ifneq ($(VBOX_SVN_DEP),)
#	$(QUIET)$(APPEND) $@ "export VBOX_SVN_REV=$(shell LC_ALL=C $(SVN) info $(PATH_ROOT) | $(SED) -e '/^Last Changed Rev/!d'  -e "s/Last Changed Rev\: *//")"
	$(QUIET)$(APPEND) $@ "export VBOX_SVN_REV=$(shell LC_ALL=C $(SVN) info $(PATH_ROOT) | $(SED) -e '/^Revision/!d'  -e "s/Revision\: *//")"
 else
	$(QUIET)$(APPEND) $@ "export VBOX_SVN_REV=$(VBOX_SVN_REV_FALLBACK)"
 endif
	$(QUIET)if test ! -f $(VBOX_SVN_REV_KMK) \
	|| test ! "`$(CAT_EXT) $@`" = "`$(CAT_EXT) $(VBOX_SVN_REV_KMK)`"; \
	then \
		$(RM_EXT) -f $(VBOX_SVN_REV_KMK); \
		$(CP_EXT) -f $@ $(VBOX_SVN_REV_KMK) || exit 1; \
		echo '* $(VBOX_SVN_REV_KMK) was updated:'; \
	else \
		echo '* $(VBOX_SVN_REV_KMK) was not changed:'; \
	fi
	$(QUIET)$(CAT_EXT) $(VBOX_SVN_REV_KMK)

$(VBOX_SVN_REV_KMK): $(VBOX_SVN_REV_KMK).ts # remove when kBuild is updated.

 include $(VBOX_SVN_REV_KMK)
else
# allow to overwrite VBOX_SVN_REV externally (mainly for building .debs/.rpms)
$(VBOX_SVN_REV_KMK):
	$(call MSG_GENERATE,,$(VBOX_SVN_REV_KMK))
	$(QUIET)$(RM) -f $@
	$(QUIET)$(MKDIR) -p $(@D)
	$(QUIET)$(APPEND) $@ "export VBOX_SVN_REV=$(VBOX_SVN_REV)"
	$(QUIET)echo '* $(VBOX_SVN_REV_KMK) was externally overwritten:'
	$(QUIET)$(CAT_EXT) $(VBOX_SVN_REV_KMK)
endif


