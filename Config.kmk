  VBOX_WITH_LINUX_ADDITIONS = 1
  VBOX_WITH_WIN32_ADDITIONS = 1
endif
ifeq ($(BUILD_TARGET),l4)
 VBOX_WITH_LINUX_ADDITIONS = 1
 VBOX_WITH_WIN32_ADDITIONS = 1
