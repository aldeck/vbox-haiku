#  if test_compile "$LIBPNG ${INCPNG:+-I$INCPNG}" libpng libpng nofatal; then
  if test_compile "$LIBPNG ${INCPNG:+-I$INCPNG}" libpng libpng; then
#    if test_execute nofatal; then
